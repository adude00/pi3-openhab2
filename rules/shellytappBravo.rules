rule "shellytappBravo UP"
when 
	Item shellytappBravo_roller received command UP
then
        var actionsBroker = getActions("mqtt","mqtt:broker:brokerv2")
	actionsBroker.publishMQTT( "shellies/shellytappBravo/command/cover:0", "open" )
end

