val String LOG = "Scene06"

rule "Scene06"
when
    Item Scene06 changed to ON
then
  val prowl = getActions("prowl", "prowl:broker:mybroker")
  prowl.pushNotification("Scene06 - Start!", "Scene: Studio Prep")
  logInfo(LOG,"Scene Started")

  if (Scene06Condition1.state == ON) {
    logInfo(LOG,"Scene06Condition1.state == ON")
    DaikinStudio_Power.sendCommand(ON)
    createTimer(now.plusSeconds(5),  [ |
      logInfo(LOG, "Setting Temp: " + Scene06Condition1temp.state as Number)
      DaikinStudio_SetPoint.sendCommand(Scene06Condition1temp.state as Number)
    ])
    createTimer(now.plusSeconds(9),  [ |
      logInfo(LOG, "Setting Fan: " + Scene06Condition1fan.state.toString)
      DaikinStudio_Fan.sendCommand(Scene06Condition1fan.state.toString)
    ])
  }

  if (Scene06Condition2.state == ON) {
    logInfo(LOG,"Scene06Condition2.state == ON")
    sf08_Light.sendCommand(ON)
  }

  createTimer(now.plusSeconds(15), [|
    Scene06.sendCommand(OFF)
    logInfo(LOG,"Scena finita")
  ])

end
