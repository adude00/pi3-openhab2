rule "Qualcuno in Casa"
  when
    Item PresenceHumans received command
  then
    // SOMEBODY ENTERS THE HOUSE
    if (receivedCommand==ON) {

      if (AutoRientro.state == ON) {
        logInfo(LOG, "AUTO: AutoRientro = ON, attivo la scena sono a casa")
        Scene_aCasa.sendCommand(ON)
      }

    }
end
