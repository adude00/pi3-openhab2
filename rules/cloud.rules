
rule "LogReader - Disconnected"
    when
        Channel "logreader:reader:disconnected:newErrorEvent" triggered
    then
        val prowl = getActions("prowl", "prowl:broker:mybroker")
        prowl.pushNotification("CLOUD: ERROR", "Il Cloud si è disconnesso. Provo a riavviarlo!")
	cl_restart.sendCommand(1)
    end

rule "LogReader - Connected"
    when
        Channel "logreader:reader:connected:newErrorEvent" triggered
    then
        val prowl = getActions("prowl", "prowl:broker:mybroker")
        prowl.pushNotification("CLOUD: OK!", "Il Cloud si è connesso.")
    end

