rule "Giorgio a Casa"
  when
    Item PresenceGiorgio received command
  then
          if (receivedCommand==ON) publish("broker", "cmnd/sonoff03/POWER", "ON") 
          if (receivedCommand==OFF) publish("broker", "cmnd/sonoff03/POWER", "OFF")
end

rule "Nan a Casa"
  when
    Item PresenceNan received command
  then
          if (receivedCommand==ON) publish("broker", "cmnd/sonoff03/POWER", "ON") 
          if (receivedCommand==OFF) publish("broker", "cmnd/sonoff03/POWER", "OFF")
end
