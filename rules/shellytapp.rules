rule "shellytapp01 UP"
when 
	Item shellytapp01_roller received command UP
then
	executeCommandLine("curl http://172.27.72.109/rpc/Cover.Open?id=0")
end

rule "shellytapp01 DOWN"
when 
	Item shellytapp01_roller received command DOWN
then
	executeCommandLine("curl http://172.27.72.109/rpc/Cover.Close?id=0")
end

rule "shellytapp01 STOP"
when 
	Item shellytapp01_roller received command STOP
then
	executeCommandLine("curl http://172.27.72.109/rpc/Cover.Stop?id=0")
end
