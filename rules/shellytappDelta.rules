rule "shellytappDelta UP"
when 
	Item shellytappDelta_roller received command UP
then
        var actionsBroker = getActions("mqtt","mqtt:broker:brokerv2")
	actionsBroker.publishMQTT( "shellies/shellytappDelta/command/cover:0", "open" )
end

