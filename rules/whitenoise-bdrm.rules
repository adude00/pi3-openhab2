rule "White Noise Bedroom ON"
when 
	Item WhiteNoiseBDRM received command ON
then
	executeCommandLine(Duration.ofSeconds(30), "/usr/bin/ssh", "root@zero1", "./whitenoise.sh")
end

rule "White Noise Bedroom OFF"
when 
	Item WhiteNoiseBDRM received command OFF
then
	executeCommandLine(Duration.ofSeconds(30), "/usr/bin/ssh", "root@zero1", "reboot")
end

