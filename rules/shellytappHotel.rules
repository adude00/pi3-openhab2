rule "shellytappHotel UP"
when 
	Item shellytappHotel_roller received command UP
then
        var actionsBroker = getActions("mqtt","mqtt:broker:brokerv2")
	actionsBroker.publishMQTT( "shellies/shellytappHotel/command/cover:0", "open" )
end

