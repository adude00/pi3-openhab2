rule "shellytappEcho UP"
when 
	Item shellytappEcho_roller received command UP
then
        var actionsBroker = getActions("mqtt","mqtt:broker:brokerv2")
	actionsBroker.publishMQTT( "shellies/shellytappEcho/command/cover:0", "open" )
end

