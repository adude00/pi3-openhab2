rule "shellytappAlpha UP"
when 
	Item shellytappAlpha_roller received command UP
then
        var actionsBroker = getActions("mqtt","mqtt:broker:brokerv2")
	actionsBroker.publishMQTT( "shellies/shellytappAlpha/command/cover:0", "open" )
end

