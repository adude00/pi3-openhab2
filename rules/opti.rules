rule "Opti ON"
  when

    Item Opti changed from OFF to ON

  then

    var String command;

    command = "/usr/bin/wakeonlan -i 172.27.72.255 90:b1:1c:91:25:7e";
    executeCommandLine(command);

end

rule "Opti OFF"
  when

    Item Opti changed from ON to OFF

  then

    var String command;

    command = "ssh root@opti.bluetears.org /sbin/shutdown -h now";
    executeCommandLine(command);

end
